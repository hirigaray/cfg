## Files.
directory = /home/kori/Downloads/Storage
session = /home/kori/local/var/rtorrent
check_hash = yes

## Disable DHT and peer exchange.
dht = disable
peer_exchange = no

## Encryption.
encryption = allow_incoming,try_outgoing,enable_retry

# Watch a directory for new torrents
schedule = watch_directory,5,5,"load_start=/home/kori/Downloads/*.torrent"
